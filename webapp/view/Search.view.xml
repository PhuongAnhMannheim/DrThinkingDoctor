<mvc:View xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:tnt="sap.tnt" controllerName="DrThinkingDoctor.controller.Search">
	<App id="app">
		<Page title=" Welcome to Dr.thinking" class="text1">
			<content>
				<tnt:ToolHeader>
					<ToolbarSpacer/>
					<core:Icon src="sap-icon://activate"/>
					<ToolbarSpacer/>
					<Text text="Daniel Thinking" wrapping="false">
					</Text>
				</tnt:ToolHeader>
				<SearchField width="90%" class="sapUiSmallMargin"/>
			<Button text="Search for Patient" press="onPressSearching"></Button>
			<MessagePage showHeader="false"
				 text="searching for the patients"
				 enableFormattedText="true"
				  description="please be patient"
				 icon="sap-icon://filter">
			</MessagePage>
			</content>
			<footer>
				<Bar>
					<contentLeft>
						<Text text="hi user"/>
					</contentLeft>
					<contentRight>
						<Text text="hi user"/>
					</contentRight>
				</Bar>
			</footer>
		</Page>
	</App>
</mvc:View>