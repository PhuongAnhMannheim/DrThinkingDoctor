<mvc:View xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt"
	controllerName="DrThinkingDoctor.controller.Profile">
	<App id="app">
		<Page 
			title="{i18n>title}"
			showHeader="false">
			<content>
				<l:VerticalLayout class="sapUiContentPadding equalColumns" width="50%">
					<l:content justifyContent="Center" alignItems="Center" alignContent="Center" >
						<List binding="{/doc_info/0}" headerText="personal data" class="list">
							<DisplayListItem label="Name" value="{Name}"/>
							<DisplayListItem label="Age" value="{Age}"/>
							<DisplayListItem label="Date of Birth" value="{Date}"/>
							<DisplayListItem label="Nationality" value="{Nationality}"/>
							<DisplayListItem label="Email" value="{Email}"/>
							<DisplayListItem label="Address" value="{Address}"/>
							<DisplayListItem label="Country" value="{Country}"/>
							<DisplayListItem label="Phone No" value="{Phone}"/>
							<DisplayListItem label="Specialty" value="{Specialty}"/>
						</List>
						<List binding="{/doc_info/0}" headerText="Medical experience data">
							<DisplayListItem label="{medical1}"/>
							<DisplayListItem label="{medical2}"/>
						</List>
						<List binding="{/doc_info/0}" headerText="Certificate and licenses">
							<DisplayListItem label="{Certificate1}"/>
							<DisplayListItem label="{Certificate2}"/>
							<DisplayListItem label="{Certificate3}"/>
						</List>
						<List binding="{/doc_info/0}" headerText="Bio">
							<DisplayListItem label="{Bio}"/>
						</List>
						<List binding="{/doc_info/0}" headerText="Bank details">
							<DisplayListItem label="IBAN" value="{IBAN}"/>
							<DisplayListItem label="BIC" value="{BIC}"/>
							<DisplayListItem label="PayPal" value="{PayPal}"/>
						</List>
					</l:content>
				</l:VerticalLayout>
			</content>
		</Page>

	</App>
</mvc:View>