<mvc:View xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt"
	controllerName="DrThinkingDoctor.controller.Appointment">
	<App id="app">
		<Page >
		<content>
				<Panel>
					<headerToolbar>
						<Toolbar>
							<Title level="H2" text="Upcoming appointment"/>
						</Toolbar>
					</headerToolbar>
					
						<FlexBox height="200px" justifyContent="Center">
							<items icon="sap-icon://search">
								<List binding="{/p_info/0}" width="300px">
									<DisplayListItem label="Name" value="{Name_1}"/>
									<DisplayListItem label="Illness" value="{illness_1}"/>
									<DisplayListItem label="Date" value="{date_1}"/>
									<DisplayListItem label="Time" value="{Time_1}"/>
								</List>
									
								<List binding="{/p_info1/0}" width="300px">
									<DisplayListItem label="Name" value="{Name_2}"/>
									<DisplayListItem label="Illness" value="{illness_2}"/>
									<DisplayListItem label="Date" value="{date_2}"/>
									<DisplayListItem label="Time" value="{Time_2}"/>
								</List>
									</items>
						</FlexBox>
							
				
				</Panel>
				
				<Panel>
					<headerToolbar>
						<Toolbar>
							<Title level="H2" class="center" text="Previous appointment" />
						</Toolbar> 
					</headerToolbar>
					
						<FlexBox height="200px" justifyContent="Center">
							<items icon="sap-icon://search">
								
								<List binding="{/p_info2/0}" width="300px" >
									<DisplayListItem label="Name" value="{Name_3}" />
									<DisplayListItem label="Illness" value="{illness_3}"/>
									<DisplayListItem label="Date" value="{date_3}"/>
									<DisplayListItem label="Time" value="{Time_3}"/>
								</List>
								<List binding="{/p_info3/0}" width="300px">
									<DisplayListItem label="Name" value="{Name_4}"/>
									<DisplayListItem label="Illness" value="{illness_4}"/>
									<DisplayListItem label="Date" value="{date_4}"/>
									<DisplayListItem label="Time" value="{Time_4}"/>
								</List>
							</items>
						</FlexBox>
				
				</Panel>
			</content>
			
		
			
		</Page>
	</App>
</mvc:View>