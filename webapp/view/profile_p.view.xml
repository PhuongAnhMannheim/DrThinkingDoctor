<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:tnt="sap.tnt" controllerName="test1.controller.profile_p">
	<App id="app">
		<pages>
			<Page title=" Welcome to Dr.thinking" class="text1">
				<content>
					<tnt:ToolHeader>
						<Button icon="sap-icon://menu2" type="Transparent">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<ToolbarSpacer/>
						<core:Icon src="sap-icon://activate"/>
						<Text text="Feel free to view your profile" wrapping="false">
							<layoutData>
								<OverflowToolbarLayoutData priority="Disappear"/>
							</layoutData>
						</Text>
						<ToolbarSpacer/>
						<Text text="Omar" wrapping="false">
							<layoutData>
								<OverflowToolbarLayoutData priority="Disappear"/>
							</layoutData>
						</Text>
					</tnt:ToolHeader>
					
					<ObjectHeader responsive="true" intro="Omar" title="Omar" number="shcbc">
						<attributes>
			<ObjectAttribute
				title="rating"
				text="dhkbv"/>
		</attributes>
					</ObjectHeader>
					
					
					<l:VerticalLayout class="sapUiContentPadding equalColumns" width="500px" >
						<l:content>
							<FlexBox width="500px"  alignItems="Center">
								<items>
									<List binding="{/p_info/0}" headerText="personal data" width="200px">
										<DisplayListItem label="Name" value="{Name}"/>
										<DisplayListItem label="Age" value="{age}"/>
									</List>
									<List binding="{/p_info/0}" headerText="allergies">
										<DisplayListItem label="Name" value="{Name}"/>
										<DisplayListItem label="Age" value="{age}"/>
									</List>
								</items>
							</FlexBox>
						</l:content>
					</l:VerticalLayout>
					<l:VerticalLayout class="sapUiContentPadding equalColumns" width="500px">
						<l:content>
							<FlexBox width="95%" class="columns" alignItems="Stretch">
								<items>
									
									<List binding="{/p_info/0}" headerText="medical records">
										<DisplayListItem label="Name" value="{Name}"/>
										<DisplayListItem label="Age" value="{age}"/>
									</List>
								</items>
							</FlexBox>
						</l:content>
					</l:VerticalLayout>
					
					<l:VerticalLayout class="sapUiContentPadding equalColumns" width="100%">
						<l:content>
							<FlexBox width="95%" class="columns" alignItems="Stretch">
								<items>
									<List binding="{/doc_info/0}" headerText="Banking details">
										<DisplayListItem label="Name" value="{Name}"/>
										<DisplayListItem label="Age" value="{age}"/>
									</List>
									
								</items>
							</FlexBox>
						</l:content>
					</l:VerticalLayout>
					<Button type="Emphasized" text="edit">
							
						</Button>
				</content>
				<footer>
					<Bar>
						<contentLeft>
							<Text text="hi user"/>
						</contentLeft>
						<contentRight>
							<Text text="hi user"/>
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>